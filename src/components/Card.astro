---
export interface Props {
  title: string;
  body: string;
  href: string;
}

const { href, title, body } = Astro.props;
---

<li class="link-card">
  <img src={href} alt="chat project image" />
  <h2>
    {title}
  </h2>
  <p>
    {body}
  </p>
</li>

<style>
  .link-card {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 3px;
    padding: 0.25rem;
    background-color: #ababab;
    background-image: none;
    background-size: 400%;
    border-radius: 0.6rem;
    background-position: 100%;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -2px rgba(0, 0, 0, 0.1);
    width: 80%;
    max-width: 350px;
  }

  .link-card > img {
    text-decoration: none;
    line-height: 1.4;
    border-radius: 0.6rem;
    height: 200px;
  }
  h2 {
    margin: 0;
    color: black;
    font-size: 1.25rem;
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
    color: #444;
  }
</style>
